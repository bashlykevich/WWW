<phone:PhoneApplicationPage
    x:Class="WhatWhereWhenGame.Games.br.BRGameQuestion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,2,0,16">
            <TextBlock x:Name="ApplicationTitle" Text="Брэйн-ринг" Style="{StaticResource PhoneTextNormalStyle}" />
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="8,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="26" />
                <RowDefinition Height="60" />
                <RowDefinition Height="26" />
                <RowDefinition Height="80" />
                <RowDefinition Height="82" />
            </Grid.RowDefinitions>
            <TextBlock Name="edtNumber"
                    Grid.Row="0"
                    Text="Вопрос №" />
            <ScrollViewer Name="svQuestion"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                              VerticalAlignment="Top"
                              VerticalScrollBarVisibility="Auto">
                <TextBlock
                        Name="edtQuestion"
                               VerticalAlignment="Stretch"
                               HorizontalAlignment="Stretch"
                               FontSize="24"
                               TextWrapping="Wrap" />
            </ScrollViewer>
            <TextBlock Name="edtStatus"
                       Grid.Row="2"
                           Text="Время на чтение вопроса"
                           TextAlignment="Center" />
            <TextBlock Name="edtTimer"
                       Grid.Row="3"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Text=""
                           FontSize="50"
 />
            <TextBlock Text="Ваш ответ"
                       Grid.Row="4"
                           TextAlignment="Center" />
            <TextBox Name="edtAnswer"
                     Margin="0"
                     Text=""
                       Grid.Row="5"
                       FontSize="30" TextWrapping="Wrap" />
            <StackPanel Name="spButtons"
                Grid.Row="6"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button Name="btnAnswer" Width="230" Height="90" Content="Ответить" Click="btnAnswer_Click" />
                <Button Name="btnSkip"   Width="230" Height="90" Content="Пропустить" Click="btnSkip_Click" />
            </StackPanel>
        </Grid>
    </Grid>
    <!--Sample code showing usage of ApplicationBar-->
